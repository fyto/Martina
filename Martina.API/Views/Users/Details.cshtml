    <script>
             $('#addDisease').click(function () {
                 var url = '@Url.Action("AddDisease", "Users")';
                $.ajax({
                    url: url,
                    type: 'post',
                    data: { "id": '@Model.Id' },
                    success: function (data)
                    {
                        $('#popup').html(data);
                    }
                });
